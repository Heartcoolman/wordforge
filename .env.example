# Runtime
HOST=127.0.0.1
PORT=3000
RUST_LOG=info

# Storage
SLED_PATH=./data/learning.sled

# Auth
# JWT 密钥 - 必须使用强随机值！生成命令: openssl rand -hex 32
# 警告: 不要使用默认值，不要在生产环境使用弱密钥
JWT_SECRET=MUST_CHANGE_USE_openssl_rand_hex_32
JWT_EXPIRES_IN_HOURS=24
# 管理员 JWT 密钥 - 必须与 JWT_SECRET 不同
ADMIN_JWT_SECRET=MUST_CHANGE_USE_openssl_rand_hex_32_different

# Network
CORS_ORIGIN=http://localhost:5173
TRUST_PROXY=false

# Rate limit
RATE_LIMIT_WINDOW_SECS=900
RATE_LIMIT_MAX=500

# Worker
WORKER_LEADER=true
ENABLE_LLM_ADVISOR_WORKER=false
ENABLE_ENGINE_MONITORING_WORKER=true

# AMAS
AMAS_ENSEMBLE_ENABLED=true
AMAS_MONITOR_SAMPLE_RATE=0.05

# 文件日志开关
ENABLE_FILE_LOGS=false
# 日志目录
LOG_DIR=./logs
# 运行环境 (development/production)
RUST_ENV=development
# Refresh Token 独立密钥（可选，默认从 JWT_SECRET 派生；生产环境请设置独立值）
REFRESH_JWT_SECRET=MUST_CHANGE_USE_openssl_rand_hex_32_refresh

# External Services (optional)
LLM_ENABLED=false
LLM_MOCK=true
LLM_API_URL=
LLM_API_KEY=
LLM_TIMEOUT_SECS=30
